{
  "extends": "@vue/tsconfig/tsconfig.json",
  "compilerOptions": {
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "lib": ["esnext", "dom"],
    "typeRoots": ["./node_modules/@types/", "./types"],
    "types": [
      "@dcloudio/types",
      "node",
      "@ttou/uview-typings/v3",
      "@ttou/uview-typings/refs",
    ]
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"]
}
